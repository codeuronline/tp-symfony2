{% extends 'base.html.twig' %}

{% block Accueil %}Organigramme
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Organigramme de l'Ã©quipe</h1>
		<p>
			{% for userOrder in order %}
			{% set flagUser = true %}
				{% for user in users %}
					{% if userOrder == user.key %}
					{% set flag = true %}
						{% for place in hierarchie %}
							{% set i = loop.index %}
							{% if (user.supHierarchique == place) and (flag == true) and flagUser == true %}
								{% set flag = false %}
								{% for j in 1.. i %}
									&nbsp; &nbsp;
								{% endfor %}
								{{user.id}}
								<img width='40px' heigh='40px' src="../img/{{ user.photo }}" alt="photo de {{user.firstname}} {{user.lastname}}">
								<a href="organigramme/user/{{user.numero}}">{{user.firstname}}
									{{user.lastname}}
									({{user.label}})</a>
									<br>
									{% set flagUser = false %}
							{% endif %}
						{% endfor %}
					{% endif %}
				{% endfor %}
			{% endfor %}

		</p>

	</div>
{% endblock %}
